{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "suppliers",
  "type": "object",
  "required": ["name"],
  "properties": {
    "id": {
      "title": "id",
      "readOnly": true,
      "type": "integer"
    },
    "name": {
      "title": "name",
      "readOnly": false,
      "type": "string",
      "minLength": 3
    },
    "address": {
      "title": "address",
      "readOnly": false,
      "type": "string"
    },
    "vatNumber": {
      "title": "vatNumber",
      "readOnly": false,
      "type": "string"
    },
    "taxCode": {
      "title": "taxCode",
      "readOnly": false,
      "type": "string"
    },
    "email": {
      "title": "email",
      "readOnly": false,
      "type": "string"
    },
    "phone": {
      "title": "phone",
      "readOnly": false,
      "type": "string"
    },
    "created": {
      "title": "created",
      "readOnly": true,
      "writeOnly": true,
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "title": "modified",
      "readOnly": true,
      "writeOnly": true,
      "type": "string",
      "format": "date-time"
    }
  }
}
